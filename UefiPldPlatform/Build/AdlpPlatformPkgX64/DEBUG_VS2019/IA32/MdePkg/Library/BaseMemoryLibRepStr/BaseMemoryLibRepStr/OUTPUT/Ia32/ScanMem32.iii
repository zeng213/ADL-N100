    SECTION .text

;------------------------------------------------------------------------------
; const void *
; __cdecl
; InternalMemScanMem32 (
;         const void                *Buffer,
;         UINTN                     Length,
;         UINT32                    Value
;   );
;------------------------------------------------------------------------------
global _InternalMemScanMem32
_InternalMemScanMem32:
    push    edi
    mov     ecx, [esp + 12]
    mov     edi, [esp + 8]
    mov     eax, [esp + 16]
    repne   scasd
    lea     eax, [edi - 4]
    jz      .0
    mov     eax, ecx
.0:
    pop     edi
    ret

