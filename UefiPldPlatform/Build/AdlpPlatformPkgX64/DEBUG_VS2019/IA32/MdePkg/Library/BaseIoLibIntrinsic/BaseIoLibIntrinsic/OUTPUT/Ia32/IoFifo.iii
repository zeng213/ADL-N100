    SECTION .text

;------------------------------------------------------------------------------
;  void
;  __cdecl
;  IoReadFifo8 (
;      UINTN                 Port,
;      UINTN                 Size,
;     void                  *Buffer
;    );
;------------------------------------------------------------------------------
global _IoReadFifo8
_IoReadFifo8:
    push    edi
    cld
    mov     dx, [esp + 8]
    mov     ecx, [esp + 12]
    mov     edi, [esp + 16]
rep insb
    pop     edi
    ret

